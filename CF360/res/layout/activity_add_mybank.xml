<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:padding="15dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_white"
            android:padding="10dip" >

            <EditText
                android:id="@+id/et_add_mybank_verifycode_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:hint="请输入短信验证码"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_getsms_verifycode"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_button_orange"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:paddingTop="5dip"
                android:text="获取验证码"
                android:textColor="@color/txt_white"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入通过"
                android:textColor="@color/txt_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_add_mybank_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="135****4512"
                android:textColor="@color/txt_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到的短信验证码。"
                android:textColor="@color/txt_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/tv_add_mybank_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:background="@drawable/shape_center_white"
            android:hint="请输入账户姓名"
            android:padding="12dip"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:paddingLeft="10dip"
            android:text="请绑定本人的储蓄卡，每个银行仅限一张银行卡。"
            android:textColor="@color/txt_gray"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_add_mybank_chose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/shape_center_white"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_add_mybank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="选择银行"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/shape_center_white"
            android:padding="10dip" >

            <EditText
                android:id="@+id/et_add_mybank_bank_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numeric="integer"
                android:hint="输入银行卡号"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_mybank_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_button_orange"
        android:text="确认绑定"
        android:textColor="@color/txt_white" />

</RelativeLayout>