<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/apply_contract_product_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:background="@color/white"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/apply_contract_product_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/apply_contract_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="2"
                    android:text="选择产品"
                    android:textColor="@color/gray_d_d"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <ImageView
                android:id="@+id/lines"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_product_layout"
                android:scaleType="fitXY"
                android:src="@drawable/main_listitem_view_h" />

            <EditText
                android:id="@+id/apply_contract_edit_baodan_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lines"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="投保单编号"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_d_d"
                android:visibility="gone" />

            <TextView
                android:id="@+id/apply_contract_edit_baodan_select_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_baodan_number"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:drawableRight="@drawable/arrow"
                android:padding="10dip"
                android:singleLine="true"
                android:text="选择附加险"
                android:textColor="@color/gray_d_d"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/apply_contract_edit_select_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_baodan_select_insurance"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:drawableRight="@drawable/arrow"
                android:padding="10dip"
                android:singleLine="true"
                android:text="选择年龄"
                android:textColor="@color/gray_d_d"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/apply_contract_edit_select_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_select_age"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:drawableRight="@drawable/arrow"
                android:padding="10dip"
                android:singleLine="true"
                android:text="选择缴费年期"
                android:textColor="@color/gray_d_d"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/apply_contract_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_select_date"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="客户姓名"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_d_d" />

            <EditText
                android:id="@+id/apply_contract_edit_financial_planners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_name"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="理财师"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_d_d"
                android:visibility="gone" />

            <EditText
                android:id="@+id/apply_contract_edit_financial_planners_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_financial_planners"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="理财师电话"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_d_d"
                android:visibility="gone" />

            <EditText
                android:id="@+id/apply_contract_edit_receiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_financial_planners_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="收件人姓名"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_d_d" />

            <EditText
                android:id="@+id/apply_contract_edit_receiver_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apply_contract_edit_receiver_name"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="收件人手机号码"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_d_d" />

            <RelativeLayout
                android:id="@+id/rl_contract_city"
                android:layout_below="@+id/apply_contract_edit_receiver_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/tv_contract_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="所在地"
                    android:textSize="18sp"
                    android:textColor="@color/gray_d_d" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <EditText
                android:id="@+id/apply_contract_edit_receiver_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_contract_city"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_center_gray"
                android:hint="详细收货地址"
                android:maxLength="50"
                android:padding="10dip"
                android:textColor="@color/gray_d_d" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_apply_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_receiver_address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_button_orange"
        android:text="提交申请"
        android:textColor="@color/txt_white" />

    <LinearLayout
        android:id="@+id/layout_receiver_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_receiver_phone"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="合同返回地址:"
            android:textColor="@color/txt_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:text="北京市东城区建国门内大街8号中粮广场B座1305"
            android:textColor="@color/txt_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_receiver_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="收件人电话:"
            android:textColor="@color/txt_gray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="400-0669-355"
            android:textColor="@color/txt_gray"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>