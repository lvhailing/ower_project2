<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_declaration_not_insurance_product_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/edit_declaration_not_insurance_product_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >

            <TextView
                android:id="@+id/edit_declaration_not_insurance_product_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/lines_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_product_layout"
            android:scaleType="fitXY"
            android:src="@drawable/main_listitem_view_h" />

        <!-- <EditText
            android:id="@+id/edit_declaration_not_insurance_edit_contract_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lines_up"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray"
            android:hint="合同编号"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/gray" /> -->

        <EditText
            android:id="@+id/edit_declaration_not_insurance_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lines_up"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray"
            android:hint="客户姓名"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edit_declaration_not_insurance_edit_IDcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_edit_name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray"
            android:hint="身份证号"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/gray" />

        <EditText
            android:id="@+id/edit_declaration_not_insurance_edit_financial_planners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_edit_IDcard"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray"
            android:hint="理财师"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_declaration_not_insurance_edit_financial_planners_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_edit_financial_planners"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray"
            android:hint="理财师电话"
            android:inputType="phone"
            android:padding="10dip"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/edit_declaration_not_insurance_viewanimator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_edit_financial_planners_phone"
            android:layout_marginTop="10dip" >

            <EditText
                android:id="@+id/edit_declaration_not_insurance_edit_investmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_center_gray"
                android:hint="打款金额"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/edit_declaration_not_insurance_txt_currency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:gravity="center_vertical"
                android:text="万"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/edit_declaration_not_insurance_txt_amount_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_viewanimator_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dip"
            android:textSize="12sp"
            android:visibility="gone" 
            android:textColor="@color/gray"
            android:gravity="center_horizontal"/>
        <RelativeLayout
            android:id="@+id/edit_declaration_not_insurance_costAmount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_txt_amount_info"
            android:layout_marginTop="10dip" >

            <EditText
                android:id="@+id/edit_declaration_not_insurance_edit_costAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_center_gray"
                android:hint="认购费"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:gravity="center_vertical"
                android:text="万"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_declaration_not_insurance_edit_investmoney_receipt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_costAmount_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:singleLine="true"
                android:text="打款凭条"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/edit_declaration_not_insurance_img_investmoney_receipt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/add_picture"
                android:layout_toLeftOf="@+id/edit_declaration_not_insurance_img_arrow"
                android:layout_marginRight="20dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/edit_declaration_not_insurance_img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/arrow"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_declaration_not_insurance_edit_investdate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_edit_investmoney_receipt_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_center_gray" >

            <TextView
                android:id="@+id/edit_declaration_not_insurance_edit_investdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:singleLine="true"
                android:text="打款日期"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/edit_declaration_not_insurance_img_investdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/arrow"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/edit_declaration_not_insurance_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_edit_investdate_layout"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="上传凭证" />

        <ImageView
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_upload"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_listitem_view_h" />

        <TextView
            android:id="@+id/edit_declaration_not_insurance_uploadinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lines"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="请注意图片清晰度，支持jpg、png、gif、bmp等大部分照片和图片格式。"
            android:textColor="@color/gray" />

        <LinearLayout
            android:id="@+id/edit_declaration_not_insurance_uploadinfo_layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_uploadinfo"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/edit_declaration_not_insurance_img_IDpros"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_picture" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="请上传身份证正面" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="(证件照片)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/edit_declaration_not_insurance_img_IDcons"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_picture" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="请上传身份证反面" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="(签发机关)" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_declaration_not_insurance_uploadinfo_layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_uploadinfo_layout_one"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/edit_declaration_not_insurance_img_bank"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_picture" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="请上传银行卡照片" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/edit_declaration_not_insurance_img_sign"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:scaleType="centerInside"
                    android:src="@drawable/add_picture" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="请上传签字页" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/edit_declaration_not_insurance_noteinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_uploadinfo_layout_two"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="备注说明" />

        <ImageView
            android:id="@+id/lines_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_declaration_not_insurance_noteinfo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/main_listitem_view_h" />

        <EditText
            android:id="@+id/note_edit"
            android:layout_width="fill_parent"
            android:layout_height="150.0dip"
            android:layout_below="@+id/lines_down"
            android:layout_margin="15.0dip"
            android:background="@drawable/shape_center_gray"
            android:gravity="top"
            android:hint="说说您的意见及建议，我们将为您不断改进。"
            android:maxLength="50"
            android:padding="15dp"
            android:textSize="12.0sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_edit"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_button_orange"
            android:textColor="@color/txt_white" />
    </RelativeLayout>

</ScrollView>