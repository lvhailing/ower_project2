<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="15dip"
    android:paddingBottom="30dip"
     >
    <EditText
        android:id="@+id/et_insurance_idcardnum"
        android:layout_marginTop="10dip"
        android:padding="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_white_gray"
        android:hint="身份证号码" />
    <RelativeLayout
        android:id="@+id/et_insurance_type"
        android:layout_below="@+id/et_insurance_idcardnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/shape_center_white_gray"
        android:padding="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_add_insurance_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="证书类型"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/arrow" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_insurance_number"
        android:layout_below="@+id/et_insurance_type"
        android:layout_marginTop="10dip"
        android:padding="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_white_gray"
        android:hint="证书编号" />
    <LinearLayout
        android:layout_marginTop="18dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_insurance_number"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/insurance_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/checkbox_signup"
            android:button="@null"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="@string/signup_agree"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/insurance_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/insurance_web"
            android:textColor="@color/orange"
            android:textSize="12.0sp" />
    </LinearLayout>


    <Button 
        android:id="@+id/btn_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_button_orange"
        android:text="提交认证"
        android:textColor="@color/txt_white"
        />
    
    
</RelativeLayout>