<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white_gray"
     >
    <RelativeLayout 
        android:id="@+id/rl_add_mybank_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dip"
        >
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_mybank_chose_banklogo"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/yang01" />

        <TextView
            android:id="@+id/tv_mybank_chose_bankname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="工商银行" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_mybank_chose_state"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:src="@drawable/complete" />
    </RelativeLayout>
    
</RelativeLayout>