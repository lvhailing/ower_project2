<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_center_white_gray"
    android:padding="10dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView 
            android:id="@+id/mybank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zhangsan"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip" >

            <TextView
                android:id="@+id/mybank_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工商银行:"
                android:textSize="12sp"
                android:textColor="@color/txt_gray_d" />

            <TextView
                android:id="@+id/mybank_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12454521****1245"
                android:textSize="12sp"
                android:textColor="@color/txt_gray_d" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_unband"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_button_orange"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="解除绑定"
        android:textSize="12sp"
        android:textColor="@color/txt_white" />

</RelativeLayout>