<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_add_customer_type"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_customer_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户类型"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_add_customer_num"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:hint="客户编号"
            android:paddingLeft="12dip"
            android:maxLength="8"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_add_customer_name"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:hint="客户姓名"
            android:paddingLeft="12dip"
            android:maxLength="6"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl_add_customer_sex"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_customer_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户性别"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_add_customer_idnumer"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:hint="身份证号"
            android:paddingLeft="12dip"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_add_customer_phonenumer"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:hint="电话号码"
            android:paddingLeft="12dip"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl_add_customer_value"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_customer_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="价值评估"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_customer_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/shape_button_orange"
        android:text="保存客户信息"
        android:textColor="@color/txt_white" />

</RelativeLayout>