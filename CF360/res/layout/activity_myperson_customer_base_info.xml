<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_base_info_customer_type"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_base_info_customer_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户类型"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_type_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_base_info_customer_type_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_customer_type_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户编号"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_num_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_base_info_customer_num"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="8"
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户姓名"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_name_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_base_info_customer_name"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="6"
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_base_info_customer_sex"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_base_info_customer_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户性别"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_sex_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_base_info_customer_sex_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_customer_sex_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户年龄"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_age_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_base_info_customer_age"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="3"
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_idcard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="身份证号"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_idcard_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_base_info_customer_idcard"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_nation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="民族"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_nation_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_base_info_customer_nation"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="6"
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_company"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="公司"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_company_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/tv_base_info_customer_company"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="20"
                android:maxLines="1"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="职位"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_position_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/tv_base_info_customer_position"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="20"
                android:maxLines="1"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_base_info_customer_profession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="所在行业"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_base_info_customer_profession_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/tv_base_info_customer_profession"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="20"
                android:maxLines="1"
                android:paddingRight="10dip"
                android:singleLine="true"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>