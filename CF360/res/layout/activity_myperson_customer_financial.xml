<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_financial_customer_car"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="私家车"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_financial_customer_car_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_financial_customer_car"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:textColor="@color/txt_gray_d"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_financial_customer_house"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="房产"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_financial_customer_house_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_financial_customer_house"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:textColor="@color/txt_gray_d"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_financial_customer_valueassessment"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_financial_customer_valueassessment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="价值评估"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_valueassessment_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_financial_customer_valueassessment_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_customer_valueassessment_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_financial_customer_yearsalary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="年薪"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_financial_customer_yearsalary_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_financial_customer_yearsalary"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:textColor="@color/txt_gray_d"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6" />
    </LinearLayout>

</RelativeLayout>