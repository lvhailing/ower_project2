<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_customer_has_baodan"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5dip"
            android:background="@color/white"
            android:layout_weight="1"
             >

            <TextView
                android:id="@+id/tv_his_end_baodan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="@string/customer_has_baodan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_day_load"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/white"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="@string/customer_day_load" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_base_info"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginTop="5dip"
            android:background="@color/white"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="@string/customer_base_info" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_phone"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/white"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="@string/customer_phone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_touzi_yixiang"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/white"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="@string/customer_touzi_yixinag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_money"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/white"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="@string/customer_money" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_customer_instest"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/white"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:text="@string/customer_instest" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.01dip"
                android:layout_alignParentBottom="true"
                android:src="@color/light_gray" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_sendSms"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dip"
            android:background="@drawable/button_while_orager_selector"
            android:gravity="center"
            android:text="发送信息"
            android:textColor="@drawable/button_while_black_selector" />

        <Button
            android:id="@+id/btn_call_phone"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="8dip"
            android:background="@drawable/button_while_orager_selector"
            android:textColor="@drawable/button_while_black_selector"
            android:text="拨打电话" />
    </LinearLayout>

</RelativeLayout>