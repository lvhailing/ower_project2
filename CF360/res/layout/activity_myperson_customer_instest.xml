<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_instest_customer_interestsport"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_instest_customer_interestsport"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="体育类"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_interestsport_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_instest_customer_interestsport_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="15dip"
                android:layout_toRightOf="@id/tv_instest_customer_interestsport"
                android:layout_toLeftOf="@id/iv_customer_interestsport_arrow"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/txt_gray"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_instest_customer_interestArt"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_instest_customer_interestArt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="文艺类"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_interestArt_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_instest_customer_interestArt_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="15dip"
                android:layout_toRightOf="@id/tv_instest_customer_interestArt"
                android:layout_toLeftOf="@id/iv_customer_interestArt_arrow"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/txt_gray"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_instest_customer_interestarder"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_instest_customer_interestarder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="休闲类"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_interestArder_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_instest_customer_interestArder_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="15dip"
                android:layout_toRightOf="@id/tv_instest_customer_interestarder"
                android:layout_toLeftOf="@id/iv_customer_interestArder_arrow"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:singleLine="true"
                android:text="asdasd"
                android:textColor="@color/txt_gray"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="8" />
    </LinearLayout>

</RelativeLayout>