<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_phone_customer_home_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="家庭电话"
                android:paddingLeft="12dip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_customer_home_phone_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:layout_toRightOf="@id/tv_phone_customer_home_phone"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:textColor="@color/txt_gray_d"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_phone_customer_mobile_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="手机号码"
                android:paddingLeft="12dip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_customer_mobile_phone_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_phone_customer_mobile_phone"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:maxLength="50"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_phone_customer_prephone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="备用电话"
                android:paddingLeft="12dip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_customer_prephone_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:layout_toRightOf="@id/tv_phone_customer_prephone"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:maxLength="20"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_phone_customer_qq"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="QQ"
                android:paddingLeft="12dip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_customer_qq_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:layout_toRightOf="@id/tv_phone_customer_qq"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/txt_gray_d" 
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_phone_customer_fax"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="传真"
                android:paddingLeft="12dip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_customer_fax_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:layout_toRightOf="@id/tv_phone_customer_fax"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_phone_customer_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="电子邮箱"
                android:paddingLeft="12dip"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone_customer_email_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:inputType="textEmailAddress"
                android:layout_toRightOf="@id/tv_phone_customer_email"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:paddingRight="10dip"
                android:layout_marginLeft="5dip"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="50"
                android:textColor="@color/txt_gray_d"
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_phone_customer_birthaddress"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_phone_customer_birthaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="出生地址"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_customer_birthaddress_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_phone_customer_birthaddress_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_customer_birthaddress_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" 
                android:textSize="15sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_phone_customer_liveaddress"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_phone_customer_liveaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="现居地址"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_liveaddress_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_phone_customer_liveaddress_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_liveaddress_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" 
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>