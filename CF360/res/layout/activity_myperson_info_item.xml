<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_gray"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:id="@+id/ll_myperson_info_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_myperson_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zhangsan" />
        <TextView
            android:id="@+id/tv_myperson_info_money"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zhangsan"
            android:textColor="@color/orange" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip" >

        <TextView
            android:id="@+id/tv_myperson_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工商银行:"
            android:textColor="@color/txt_gray_d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_myperson_info_state"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12454521****1245"
            android:textColor="@color/txt_gray_d"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>