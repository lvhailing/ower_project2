<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical"
    android:paddingTop="15dip" >

    <EditText
        android:id="@+id/post_contract_edit_express_name"
        android:layout_marginTop="10dip"
        android:padding="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_gray"
        android:hint="输入快递公司名称"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:textColor="@color/gray"/>
    <EditText
        android:layout_below="@+id/post_contract_edit_express_name"
        android:id="@+id/post_contract_edit_express_number"
        android:layout_marginTop="10dip"
        android:padding="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_gray"
        android:hint="输入运单号"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" 
        android:textColor="@color/gray"/>
    <EditText
        android:layout_below="@+id/post_contract_edit_express_number"
        android:id="@+id/post_contract_edit_express_address"
        android:layout_marginTop="10dip"
        android:padding="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_gray"
        android:hint="输入快递公司网址"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:text="确认寄回"
        android:textColor="@color/txt_white"
         />
    
</RelativeLayout>