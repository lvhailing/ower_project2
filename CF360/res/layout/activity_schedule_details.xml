<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_add_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dip"
    android:background="@color/bg_gray_light" >

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_add_shedule_name"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_shedule_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="客户姓名"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_add_shedule_name_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_add_shedule_name_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_add_shedule_name_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_type"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_shedule_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="日程类型"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_add_shedule_type_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_add_shedule_type_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_add_shedule_type_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_theme"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_add_shedule_theme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="日程主题"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/add_shedule_theme_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_add_shedule_theme"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="20"
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_describe"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white" >

            <TextView
                android:id="@+id/tv_add_shedule_describe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="日程描述"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_add_shedule_describe_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_add_shedule_describe"
                android:background="@drawable/shape_center_white"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="50"
                android:paddingRight="10dip"
                android:textColor="@color/txt_gray_d"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_starttime"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_shedule_starttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="开始时间"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_add_shedule_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_add_shedule_starttime_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_add_shedule_starttime"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_endtime"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_shedule_endtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="结束时间"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_add_shedule_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_add_shedule_endtime_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_add_shedule_endtime"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_remind"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_shedule_remind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="日程提醒"
                android:paddingLeft="10dip"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/imageButton_remind"
                android:layout_width="40dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8.0dip"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/message2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_shedule_remind_time"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_shedule_remind_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="提醒时间"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_add_shedule_remind_time_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_add_shedule_remind_time_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_add_shedule_remind_time_arrow"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add_schedule_state"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="8dip"
            android:layout_weight="1"
            android:background="@drawable/shape_center_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_add_schedule_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_center_white"
                android:gravity="center_vertical"
                android:hint="日程状态"
                android:paddingLeft="12dip"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_add_schedule_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/tv_add_schedule_state_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/iv_add_schedule_state"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_gray_d" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_schedule_save"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_button_orange"
        android:text="保存日程 "
        android:textColor="@color/txt_white" />

</RelativeLayout>