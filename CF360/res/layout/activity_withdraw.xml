<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical"
    android:padding="15dip" >

    <ListView 
        android:id="@+id/lv_withdraw_mybank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dip"
        android:background="@color/bg_gray_light"
        android:dividerHeight="10dip"
        android:divider="@color/bg_gray_light"
		android:listSelector="@color/bg_gray_light"
		android:cacheColorHint="@color/bg_gray_light"
        android:scrollbars="none"
        >
        
    </ListView>

    <Button 
        android:id="@+id/btn_withdraw_mybank_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_button_orange"
        android:text="添加新账户"
        android:textColor="@color/txt_white"
        />
    
</RelativeLayout>