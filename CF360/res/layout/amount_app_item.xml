<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_white_gray_d"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/amount_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/gray"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/amount_item_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/shape_center_gray"
            android:gravity="left|center_vertical"
            android:hint="输入打款金额"
            android:textColor="@color/gray" 
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_amout_item_current"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_marginLeft="2dip"
            android:text="万"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/amount_item_commissionratio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="left|center_vertical"
            android:textColor="@color/orange"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>