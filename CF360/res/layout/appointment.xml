<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Appointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light" >

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="50dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/appointment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="中融信托-兴创美林湖"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_center_huise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_center_huise"
                    android:padding="1dp" >

                    <!-- android:background="@drawable/main_listitem_view_h" -->

                    <EditText
                        android:id="@+id/appointment_name"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_center_white"
                        android:ems="10"
                        android:hint="理财师姓名"
                        android:paddingLeft="10dp" >

                        <requestFocus />
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_center_huise"
                    android:padding="1dp" >

                    <EditText
                        android:id="@+id/app_phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/shape_center_white"
                        android:hint="理财师电话"
                        android:paddingLeft="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_center_huise"
                    android:padding="1dp" >

                    <EditText
                        android:id="@+id/app_money"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/shape_center_white"
                        android:hint="预约金额"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:text="万元"
                        android:textColor="@color/bg_huise"
                        android:textSize="16sp" />
                </RelativeLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_marginLeft="10dip"
				    android:layout_marginTop="1dip"
				    >
				    <TextView 
				        android:id="@+id/tv_appointment_hasAmount"
				        android:layout_width="0dip"
				        android:layout_weight="1"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textColor="@color/gray_d"
				        android:textSize="12sp"
				        />
				    <TextView 
				        android:id="@+id/tv_appointment_canAmount"
				        android:layout_width="0dip"
				        android:layout_weight="1"
				        android:layout_height="wrap_content"
				        android:text=""
				        android:textColor="@color/gray_d"
				        android:textSize="12sp"
				        />
				    
				</LinearLayout>
                <RelativeLayout
                    android:id="@+id/rFinancial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_center_huise"
                    android:padding="1dp"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/Financial"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/shape_center_white"
                        android:hint="理财师"
                        android:paddingLeft="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rFinancialPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_center_huise"
                    android:padding="1dp"
                    android:visibility="gone" >

                    <EditText
                        android:id="@+id/FinancialPhone"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@drawable/shape_center_white"
                        android:hint="理财师电话"
                        android:paddingLeft="10dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_center_huise"
                    android:padding="1dp" >
				
                    <EditText
                        android:id="@+id/app_content"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/shape_center_white"
                        android:gravity="top"
                        android:hint="其他说明"
                        android:maxLength="50"
                        android:paddingLeft="10dp"
                        android:paddingTop="18dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
         >

        <Button
            android:id="@+id/btn_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dip"
            android:background="@drawable/buttonyuyue_selector"
            android:text="提交预约"
            android:textColor="@drawable/button_view_style" />
    </RelativeLayout>

</RelativeLayout>