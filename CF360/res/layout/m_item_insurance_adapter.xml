<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/linear_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/linear_one1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:id="@+id/ins_title_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="中融信托-兴创美林湖"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/linear_one1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/InsuranceHotImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_button_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="热销"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/InsuranceTuijianImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_center_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="推荐"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_one"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout style="@style/XinTuo_context_linear_Style" >

            <TextView
                android:id="@+id/ins_content_first_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100万元起"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/ins_content_first_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="保险公司"
                android:textColor="#666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout style="@style/XinTuo_context_linear_Style" >

            <TextView
                android:id="@+id/ins_content_Second_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100万元起"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/ins_content_Second_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="保险期间"
                android:textColor="#666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout style="@style/XinTuo_context_linear_Style" >

            <TextView
                android:id="@+id/ins_content_Third_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100万元起"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/ins_content_Third_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="返佣比例"
                android:textColor="#666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/linear_two" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/light_gray" />
    </RelativeLayout>

</RelativeLayout>